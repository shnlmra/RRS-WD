<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RRS</title>

    <!-- Bootstrap and Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.bootstrap5.css">

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/adminLayout.js" defer></script>
</head>

<body id="body-pd" class="bg-light" styel="font-family: 'Poppins'">
    <header class="header bg-white" id="header">
        <div class="header_toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>
        <div class="header_img">
            <img src="~/images/default-avatar.png" alt="User Profile" />
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a class="nav_logo" asp-area="" asp-action="Index" asp-controller="Dashboard">
                    <i class='bx bx-dish nav_logo-icon'></i>
                    <span class="nav_logo-name">Golden Palate</span>
                </a>
                <div class="nav_list">
                    <a class="nav_link active" asp-area="" asp-action="Index" asp-controller="Dashboard">
                        <i class='bx bx-grid-alt nav_icon'></i>
                        <span class="nav_name">Dashboard</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-action="Index" asp-controller="Reservation">
                        <i class='bx bx-calendar nav_icon'></i>
                        <span class="nav_name">Reservations</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-action="Index" asp-controller="Menu">
                        <i class='bx bx-food-menu nav_icon'></i>
                        <span class="nav_name">Menu Management</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-action="Index" asp-controller="Table">
                        <i class='bx bx-table nav_icon'></i>
                        <span class="nav_name">Table Management</span>
                    </a>
                    <a class="nav_link" asp-area="" asp-action="Index" asp-controller="AuditLogs">
                        <i class='bx bx-history nav_icon'></i>
                        <span class="nav_name">Audit Logs</span>
                    </a>
                </div>
            </div>
            <a href="#" class="nav_link">
                <i class='bx bx-log-out nav_icon'></i>
                <span class="nav_name">SignOut</span>
            </a>
        </nav>
    </div>

    <!-- Container Main -->
    <div class="container" style="margin-top: 70px">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
