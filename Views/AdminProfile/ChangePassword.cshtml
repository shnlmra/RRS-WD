<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .settings-container {
        display: flex;
        max-width: 1200px;
        margin: 2rem auto;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .sidebar {
        width: 300px;
        background-color: #fff;
        border-right: 1px solid #ddd;
        padding: 2rem;
    }

        .sidebar h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 600;
        }

        .sidebar p {
            font-size: 14px;
            color: #777;
            margin-bottom: 1.5rem;
        }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        margin-bottom: 0.5rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
    }

        .menu-item:hover {
            background-color: #f9f9f9;
        }

        .menu-item img {
            margin-right: 10px;
        }

        .menu-item.active {
            background-color: #fff5dc;
            border-left: 5px solid #ffc107;
        }

    .content {
        flex-grow: 1;
        padding: 2rem;
        text-align: center;
    }

    .form-container {
        max-width: 500px;
        margin: 2rem auto;
        background: #fff;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    p {
        font-size: 14px;
        color: #777;
        margin-bottom: 2rem;
    }

    form label {
        font-weight: 500;
        display: block;
        margin-bottom: 0.5rem;
        text-align: left;
    }

    form input {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .btn {
        display: inline-block;
        width: 100%;
        background-color: goldenrod;
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.75rem;
        text-align: center;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn:hover {
            background-color: darkgoldenrod;
        }

    .password-toggle {
        position: relative;
        display: flex;
        align-items: center;
    }

        .password-toggle input {
            flex-grow: 1;
        }

    .toggle-icon {
        position: absolute;
        right: 10px;
        cursor: pointer;
    }

        .toggle-icon img {
            width: 20px;
            height: 20px;
        }
</style>

<div class="settings-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Settings</h3>
        <p>Manage your settings</p>
        <div class="menu-item" id="menu-notifications">
            <img src="/assets/bell.png" alt="Notifications Icon" width="20">
            <a href="/AdminProfile/Notifications" style="text-decoration: none; color: inherit;">Notifications</a>
        </div>
        <div class="menu-item active" id="menu-profile">
            <img src="/assets/user.png" alt="Profile Icon" width="20">
            <a href="/AdminProfile/Profile" style="text-decoration: none; color: inherit;">Personal Profile Settings</a>
        </div>
        <div class="menu-item" id="menu-restaurant">
            <img src="/assets/restaurant.png" alt="Restaurant Icon" width="20">
            <a href="/AdminProfile/RestaurantSettings" style="text-decoration: none; color: inherit;">Restaurant Settings</a>
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        <div class="form-container">
            <h2>Change your password</h2>
            <p>Enter a new password.</p>
            <form>
                <div class="password-toggle">
                    <input type="password" id="password" placeholder="Password *" required>
                    <span class="toggle-icon" onclick="togglePassword('password', this)">
						<img src="/assets/hide.png" alt="Show Password">
                    </span>
                </div>
                <div class="password-toggle">
                    <input type="password" id="confirmPassword" placeholder="Confirm password *" required>
                    <span class="toggle-icon" onclick="togglePassword('confirmPassword', this)">
						<img src="/assets/view.png" alt="Show Password">
                    </span>
                </div>
                <button type="submit" class="btn">Change Password</button>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId, iconElement) {
        const input = document.getElementById(inputId);
        const icon = iconElement.querySelector('img');
        if (input.type === "password") {
            input.type = "text";
            icon.src = "/assets/hide.png"; // Replace with the "hidden" eye icon file path
            icon.alt = "Hide Password";
        } else {
            input.type = "password";
            icon.src = "/assets/view.png"; // Replace with the "visible" eye icon file path
            icon.alt = "Show Password";
        }
    }
</script>
