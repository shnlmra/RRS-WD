<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins';
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .settings-container {
        display: flex;
        max-width: 1200px;
        margin: 2rem auto;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .sidebar {
        width: 300px;
        background-color: #fff;
        border-right: 1px solid #ddd;
        padding: 2rem;
        flex-shrink: 0; /* Ensure sidebar doesn't shrink */
    }

        .sidebar h3 {
            margin: 0;
            font-size: 20px;
            font-weight: 600;
        }

        .sidebar p {
            font-size: 14px;
            color: #777;
            margin-bottom: 1.5rem;
        }

    .menu-item {
        display: flex;
        align-items: center;
        padding: 1rem;
        margin-bottom: 0.5rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 500;
    }

        .menu-item:hover {
            background-color: #f9f9f9;
        }

        .menu-item img {
            margin-right: 10px;
        }

        .menu-item.active {
            background-color: #fff5dc;
            border-left: 5px solid #ffc107;
        }

    .content {
        flex-grow: 1; /* Make content take remaining space */
        padding: 2rem;
    }

    h2 {
        text-align: center;
        font-weight: 600;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 0.5rem;
        font-size: 16px;
    }

    input[type="text"], input[type="email"], input[type="tel"] {
        width: 100%;
        padding: 0.5rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
    }

    .btn {
        display: inline-block;
        width: 25%;
        background-color: goldenrod;
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.75rem;
        text-align: center;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn:hover {
            background-color: darkgoldenrod;
        }
</style>

<div class="settings-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Settings</h3>
        <p>Manage your settings</p>
        <div class="menu-item" id="menu-notifications">
            <img src="/assets/bell.png" alt="Notifications Icon" width="20">
            <a href="/AdminProfile/Notifications" style="text-decoration: none; color: inherit;">Notifications</a>
        </div>
        <div class="menu-item" id="menu-profile">
            <img src="/assets/user.png" alt="Profile Icon" width="20">
            <a href="/AdminProfile/Profile" style="text-decoration: none; color: inherit;">Personal Profile Settings</a>
        </div>
        <div class="menu-item active" id="menu-restaurant">
            <img src="/assets/restaurant.png" alt="Restaurant Icon" width="20">
            <a href="/AdminProfile/RestaurantSettings" style="text-decoration: none; color: inherit;">Restaurant Settings</a>
        </div>
    </div>

    <!-- Content -->
    <div class="content">
        <h2>Restaurant Settings</h2>
        <form>
            <label for="restaurantName">Restaurant Name</label>
            <input type="text" id="restaurantName" value="@Model.RestaurantName">

            <label for="address">Address</label>
            <input type="text" id="address" value="@Model.Address">

            <label for="phoneNumber">Phone Number</label>
            <input type="tel" id="phoneNumber" value="@Model.PhoneNumber">

            <label for="email">Email</label>
            <input type="email" id="email" value="@Model.Email">

            <label for="operatingHours">Operating Hours</label>
            <input type="text" id="operatingHours" value="@Model.OperatingHours">

            <label for="holidays">Holidays</label>
            <input type="text" id="holidays" value="@Model.Holidays">

            <button type="submit" class="btn">Save</button>
        </form>
    </div>
</div>
