@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Dancing+Script:wght@400..700&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

</head>

<div class="row">
    <div class="col-12">
        <div class="half-screen-image" style="background-image: url('@Url.Content("~/assets/landing-bg.jpeg")');"></div>
    </div>
</div>

<style>
    .half-screen-image {
        position: absolute;
        left: 50%;
        top: 0;
        width: 50vw;
        height: 90vh;
        background-size: cover;
        background-position: left;
        background-repeat: no-repeat;
        opacity: 0.3;
    }
</style>

<div class="col-12 text-container">
    <h1 class="dancing-script" style="margin-top:5%">Golden Palate</h1>
    <p>NO LINES,</p>
    <p>NO WORRIES.</p>

</div>

<style>
    .text-container p {
        padding: 10px;
        color: black;
        z-index: 10; /* Ensure the text is on top of other elements */
        font-size: 7.5rem;
        margin-left: 70px;
        font-family: 'Merriweather', serif; /* Use the Merriweather font */
    }

        .text-container h1 {
            top: 0;
            right: 0;
            padding: 10px;
            color: black;
            z-index: 10; /* Ensure the text is on top of other elements */
            margin-top: 5%;
            font-size: 5.5rem;
        }

    /* Fix font for h1 and p inside text-container */
    .dancing-script {
        font-family: 'Dancing Script', cursive;
        font-weight: 400; /* Adjust the font weight as needed */
        font-style: normal;
    }
</style>
<button type="button" class="btn" style="border-radius:12px; margin-top:20px; width:327px; height: 69px; margin-left:40% !important; background-color:black; color:white; font-family: 'Merriweather', serif;" onclick="window.location.href='@Url.Action("CReservation", "CReservation")'">
    BOOK NOW
</button>



<style>
    .btn:hover {
        background-color: #555; /* Change to a lighter color on hover */
        transform: scale(1.05); /* Slightly enlarge the button */
        z-index: 1;
    }
</style>


