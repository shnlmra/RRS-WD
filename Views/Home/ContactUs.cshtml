
@{
    ViewData["Title"] = "Customer";
}

<div class="shadow-box bg-white" style="width: 100%; height: 200px; margin: 0; box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2); position: relative; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <img src="~/assets/Golden Palate.png" alt="Golden Palate" style="width: auto; height: 80px; margin-top:50px;">
    <p style="margin-top: 10px; font-size: 14px; color: #333;">10 Avery Street Boston, Massachusetts, USA, 02111</p>
</div>

<style>


    .contact-box {
        margin-top:5%;
        margin-left:30%;
        background-color: white;
        width: 700px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
    }

        .contact-box h1 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .contact-box textarea {
            width: 90%;
            height: 120px;
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px;
            font-size: 16px;
            resize: none;
            outline: none;
        }

            .contact-box textarea::placeholder {
                color: #aaa;
            }

        .contact-box button {
            margin-top: 20px;
            width: 120px;
            padding: 10px;
            background-color: #3CC142;
            color: white;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .contact-box button:hover {
                background-color: #2a9c30;
            }
</style>

    <div class="contact-box">
        <h1>Contact us</h1>
        <textarea placeholder="Drop your concerns here.."></textarea>
        <button>Send</button>
    </div>

       
