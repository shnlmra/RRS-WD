@using RRS.Models.DataTransferObject
@model RRS.Models.DataTransferObject.MenuDto
@{
    ViewData["Title"] = "Menu Management";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}


<div class="d-flex align-items-center justify-content-between mb-2">
    <p class="text-secondary ms-2 mt-2">List of available menu items.</p>
    <!-- Add Button positioned at the top-right -->
    <button type="button" class="btn btn-primary mr-2" data-bs-toggle="modal" data-bs-target="#addMenuModal">
        + Add Menu
    </button>
</div>

<div class="table-responsive">
    <table class="table table-striped table text-center" cellspacing="0" id="menuTable" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model.Menus)
            {
                <tr>
                    <td>@menu.Name</td>
                    <td>@menu.Description</td>
                    <td>@menu.Price</td>
                    <td>@menu.Category.CategoryName</td>
                    <td class=" d-flex gap-2">
                        <a href="#" class="text-info" data-bs-toggle="modal" data-bs-target="#editMenuModal" style="display: flex; align-items: center; text-decoration: none;">
                            <i class='bx bx-edit nav_icon' style="margin-right: 8px;"></i>
                        </a>
                        <a href="#" class="text-danger" data-bs-toggle="modal" data-bs-target="#deleteMenuModal" style="display: flex; align-items: center; text-decoration: none;">
                            <i class='bx bx-trash nav_icon' style="margin-right: 8px;"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Name</th>
                <th>Description</th> 
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </tfoot>
    </table>
</div>

<!-- Modals -->
@await Html.PartialAsync("AddMenuModal")